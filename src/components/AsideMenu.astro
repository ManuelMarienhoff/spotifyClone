---
import LibraryIcon from "../components/icons/Library.astro"
import HomeIcon from "../components/icons/Home.astro"
import SideMenuItem from "./SideMenuItem.astro"
import SearchIcon from "../components/icons/Search.astro"
import SideMenuCard from "../components/SideMenuCard.astro"

import {playlists} from "../lib/data"
---

<nav class="flex flex-col flex-1 gap-2">
    <div class="bg-zinc-900 rounded-lg p-2">
        <ul>
            <SideMenuItem href="/">
                <HomeIcon/>
                Home
            </SideMenuItem>
            <SideMenuItem href="/search">
                <SearchIcon/>
                Search
            </SideMenuItem>
        </ul>
    </div>
    <div class="bg-zinc-900 rounded-lg p-2 flex-1">
        <ul>
            <SideMenuItem href="/library">
                <LibraryIcon/>
                Library
            </SideMenuItem>
            {
                playlists.map(playlist => <SideMenuCard playlist={playlist}/>)
            }
        </ul>
    </div>
</nav>